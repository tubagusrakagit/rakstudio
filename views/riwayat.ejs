<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <title>Riwayat Pemesanan</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Poppins', 'sans-serif'],
          }
        }
      }
    }
  </script>
</head>
<body class="min-h-screen font-sans bg-cover bg-center bg-no-repeat flex justify-center items-center px-4 py-10" style="background-image: url('/assets/images/GRAPHIC.jpg');">
  <div class="bg-white bg-opacity-90 shadow-xl rounded-2xl px-8 py-10 max-w-3xl w-full">
    <h1 class="text-3xl font-bold text-center text-blue-800 mb-8">Riwayat Pemesanan Anda</h1>
    <div class="text-center mb-6">
      <a href="/" class="inline-block bg bg-blue-600 text-white px-6 py-2 rounded-full hover:bg-blue-700 transition text-sm font-medium">
        Kembali ke Beranda
      </a>
    </div>

    <% if (pesanan.length === 0) { %>
      <div class="bg-gray-100 text-center text-gray-600 p-6 rounded-xl">
        Belum ada pesanan yang tercatat.
      </div>
    <% } else { %>
      <div class="space-y-6">
        <% pesanan.forEach(pesan => { %>
          <div class="border-l-4 
            <% if (pesan.jenisLayanan === 'ui-design') { %> border-yellow-500 <% } else { %> border-blue-600 <% } %> 
            bg-white bg-opacity-90 backdrop-blur-md shadow rounded-xl p-5">
            
            <div class="flex justify-between items-center mb-2">
              <h2 class="text-lg font-semibold text-gray-800">
                <%= pesan.paket %> -
                <span class="text-sm italic text-gray-500 capitalize"><%= pesan.jenisLayanan || 'design-graphic' %></span>
              </h2>
              <span class="text-xs font-semibold px-3 py-1 rounded-full 
                <% if (pesan.status === 'Baru') { %> bg-blue-100 text-blue-700 
                <% } else if (pesan.status === 'Selesai') { %> bg-green-100 text-green-700 
                <% } else { %> bg-gray-200 text-gray-700 <% } %>">
                <%= pesan.status %>
              </span>
            </div>

            <p class="text-sm text-gray-600 mb-1">
              <strong>Tanggal:</strong> <%= new Date(pesan.tanggal).toLocaleDateString('id-ID') %>
            </p>
            <p class="text-sm text-gray-700">
              <strong>Deskripsi:</strong> <%= pesan.deskripsi %>
            </p>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>