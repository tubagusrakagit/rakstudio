<nav class="fixed top-0 left-0 w-full bg-black z-50 px-4 md:px-10 py-3 flex items-center justify-between">
  <!-- Logo + Hamburger -->
  <div class="flex items-center gap-4">
    <a href="/">
      <img src="/assets/images/LOGO.png" alt="Logo" class="h-10" />
    </a>

    <!-- Hamburger button (Mobile only) -->
    <button id="hamburger" class="md:hidden focus:outline-none">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" stroke-width="2"
        viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Menu Desktop -->
  <ul class="hidden md:flex gap-6 font-medium text-white">
    <li><a href="/" class="hover:scale-105 hover:-skew-x-6 transition duration-200">Beranda</a></li>
    <li><a href="/portofolio" class="hover:scale-105 hover:-skew-x-6 transition duration-200">Portofolio</a></li>
    <li><a href="/layanan" class="hover:scale-105 hover:-skew-x-6 transition duration-200">Layanan</a></li>
    <li><a href="/produk" class="hover:scale-105 hover:-skew-x-6 transition duration-200">Produk</a></li>
  </ul>

  <!-- Kanan: Login / Riwayat / Admin -->
  <div class="flex items-center gap-3">
    <% if (isLoggedIn) { %>
      <% if (userRole === 'admin') { %>
        <!-- Admin icon -->
        <a href="/admin/pesanan" class="hidden md:inline-flex items-center justify-center bg-black border border-white rounded-full w-10 h-10">
          <img src="/assets/images/sidebar/admin-icon.svg" class="w-5 h-5" alt="Dashboard">
        </a>
      <% } %>

      <a href="/logout" class="bg-black text-white px-4 py-2 rounded-full text-sm border border-white transition hover:bg-white hover:text-black">
        Logout
      </a>
    <% } else { %>
      <a href="/login" class="bg-black text-white px-4 py-2 rounded-full text-sm border border-white transition hover:bg-white hover:text-black">
        Login/Sign Up
      </a>
    <% } %>
  </div>
</nav>

<!-- Dropdown Menu (Mobile only) -->
<div id="mobileMenu" class="md:hidden fixed top-16 left-4 w-56 bg-white text-black rounded-xl shadow-lg p-5 hidden z-40">
  <ul class="flex flex-col gap-3 font-medium">
    <li><a href="/" class="hover:text-blue-600">Beranda</a></li>
    <li><a href="/portofolio" class="hover:text-blue-600">Portofolio</a></li>
    <li><a href="/layanan" class="hover:text-blue-600">Layanan</a></li>
    <li><a href="/produk" class="hover:text-blue-600">Produk</a></li>
    <% if (isLoggedIn && userRole !== 'admin') { %>
      <li><a href="/riwayat" class="hover:text-blue-600">Riwayat</a></li>
    <% } %>
  </ul>
</div>

<script>
  const btn = document.getElementById('hamburger');
  const menu = document.getElementById('mobileMenu');
  btn.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  });
</script>