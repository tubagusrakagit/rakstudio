        <a href="/admin/pesanan" class="block py-2">Dashboard</a>
      <% } else { %>
        <a href="/riwayat" class="block py-2">Riwayat</a>
      <% } %>
      <a href="/logout" class="block py-2">Logout</a>
    <% } else { %>
      <a href="/login" class="block py-2">Login/Sign Up</a>
