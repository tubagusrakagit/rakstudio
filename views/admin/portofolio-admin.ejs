<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Portofolio Admin</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
   <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Poppins', 'sans-serif'],
          }
        }
      }
    }
  </script>
</head>
<body class="flex bg-gray-100 min-h-screen font-sans">

<!-- Sidebar -->
<%- include('../partials/sidebar-admin') %>

<!-- Main -->
<main class="flex-1 p-10">
  <h2 class="text-gray-500 text-sm">Selamat Datang Admin!</h2>
  <h1 class="text-3xl font-bold mb-6">Portofolio</h1>

  <div class="bg-white p-6 rounded-xl shadow-sm">
    <div class="flex justify-between items-center mb-6">
      <h3 class="text-xl font-semibold">Daftar Portofolio</h3>
      <button onclick="openModal()" class="bg-blue-600 text-white px-4 py-2 rounded text-sm hover:bg-blue-700">Tambah Portofolio</button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <% portofolio.forEach(item => { %>
        <div class="bg-white rounded-lg shadow overflow-hidden border">
          <img src="/uploads/<%= item.gambar %>" alt="<%= item.judul %>" class="h-48 w-full object-cover">
          <div class="p-4">
            <h4 class="font-semibold"><%= item.judul %></h4>
            <p class="text-sm text-gray-600 mt-1"><%= item.deskripsi %></p>
            <form action="/admin/portofolio/<%= item._id %>/hapus" method="POST" onsubmit="return confirm('Yakin hapus?')" class="mt-4">
              <button type="submit" class="text-red-600 text-sm hover:underline">Hapus</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</main>

<!-- Modal -->
<div id="modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
  <div class="bg-white p-6 rounded-lg shadow-lg w-96">
    <h3 class="text-lg font-semibold mb-4">Tambah Portofolio</h3>
    <form action="/admin/portofolio/tambah" method="POST" enctype="multipart/form-data">
      <input type="text" name="judul" placeholder="Judul" class="w-full border rounded px-3 py-2 mb-3" required>
      <textarea name="deskripsi" placeholder="Deskripsi" class="w-full border rounded px-3 py-2 mb-3" rows="3" required></textarea>
      <input type="file" name="gambar" accept="image/*" class="mb-4" required>
      <div class="flex justify-end gap-2">
        <button type="button" onclick="closeModal()" class="px-4 py-2 border rounded">Batal</button>
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Simpan</button>
      </div>
    </form>
  </div>
</div>

<script>
  function openModal() {
    document.getElementById('modal').classList.remove('hidden');
  }
  function closeModal() {
    document.getElementById('modal').classList.add('hidden');
  }
</script>

</body>
</html>
