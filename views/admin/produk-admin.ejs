<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <title>Admin Produk</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Poppins', 'sans-serif'],
          }
        }
      }
    }
  </script>
</head>
<body class="flex bg-gray-100 min-h-screen font-sans">

  <%- include('../partials/sidebar-admin') %>

  <!-- Main Content -->
  <main class="flex-1 p-10">
    <h2 class="text-gray-500 text-sm">Selamat Datang Admin!</h2>
    <h1 class="text-3xl font-bold mb-6">Kelola Produk</h1>

    <div class="flex justify-end mb-4">
      <button onclick="openModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">+ Tambah Produk</button>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <% produk.forEach(item => { %>
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <img src="/uploads/<%= item.gambar %>" alt="Produk" class="w-full h-48 object-cover">
          <div class="p-4 space-y-2">
            <h3 class="font-semibold text-lg"><%= item.nama %></h3>
            <p class="text-sm text-gray-600">Rp <%= item.harga.toLocaleString('id-ID') %></p>
            <p class="text-xs text-gray-500"><%= item.deskripsi.slice(0, 60) %>...</p>
            <div class="flex justify-between items-center pt-2">
              <button class="text-sm text-blue-600 hover:underline" onclick="editProduk('<%= item._id %>')">Ubah</button>
              <form action="/admin/produk/<%= item._id %>/hapus" method="POST" onsubmit="return confirm('Yakin ingin menghapus produk ini?')">
                <button type="submit" class="text-sm text-red-600 hover:underline">Hapus</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <!-- Modal -->
  <div id="modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white w-full max-w-md p-6 rounded-lg">
      <h3 class="text-lg font-semibold mb-4">Tambah Produk</h3>
      <form action="/admin/produk/tambah" method="POST" enctype="multipart/form-data" class="space-y-4">
        <input type="text" name="nama" required placeholder="Nama Produk" class="w-full border px-3 py-2 rounded text-sm" />
        <input type="number" name="harga" required placeholder="Harga" class="w-full border px-3 py-2 rounded text-sm" />
        <textarea name="deskripsi" rows="3" placeholder="Deskripsi" class="w-full border px-3 py-2 rounded text-sm"></textarea>
        <select name="kategori" required class="w-full border px-3 py-2 rounded text-sm">
          <option value="">Pilih Kategori</option>
          <option value="Logo">Logo</option>
          <option value="Kemasan">Kemasan</option>
          <option value="Poster">Poster</option>
        </select>
        <input type="file" name="gambar" required class="text-sm" />
        <input type="file" name="fileZip" accept=".zip" required class="text-sm" />
        <div class="flex justify-end gap-2">
          <button type="button" onclick="closeModal()" class="border px-4 py-2 rounded">Batal</button>
          <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Simpan</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function openModal() {
      document.getElementById('modal').classList.remove('hidden');
    }

    function closeModal() {
      document.getElementById('modal').classList.add('hidden');
    }

    function editProduk(id) {
      window.location.href = '/admin/produk/' + id + '/edit';
    }
  </script>

</body>
</html>
